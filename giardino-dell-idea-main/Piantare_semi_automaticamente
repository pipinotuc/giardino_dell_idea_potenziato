window.onload = () => {
  const box = document.getElementById('seed-content');

  // Recupera il numero di semi giÃ  piantati dallo storage, oppure parte da 0
  let planted = parseInt(localStorage.getItem('plantedSeeds')) || 0;

  // Assicurati che "seeds" sia definito e sia un array
  if (!Array.isArray(seeds) || seeds.length === 0) {
    box.textContent = "Nessun seme disponibile. ğŸŒ¾";
    return;
  }

  // Aggiorna il diario inizialmente
  updateDiario();

  // Se tutti i semi sono giÃ  stati piantati
  if (planted >= seeds.length) {
    box.textContent = "Tutti i semi sono giÃ  stati piantati! ğŸŒ";
    return;
  }

  // Intervallo per piantare i semi
  const interval = setInterval(() => {
    if (planted < seeds.length) {
      box.textContent = seeds[planted];
      planted++;
      localStorage.setItem('plantedSeeds', planted);
      updateDiario();
    } else {
      clearInterval(interval);
      box.textContent = "Tutti i semi sono stati piantati! ğŸŒ±";
    }
  }, 1000); // 1 secondo tra un seme e lâ€™altro
};

